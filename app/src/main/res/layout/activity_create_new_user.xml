<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateNewUserActivity"
    android:background="@drawable/background_gradient2">

    <ImageButton
        android:id="@+id/btn_back_createNewUser"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/arrow_left"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo_createNewUse"
        android:layout_width="110dp"
        android:layout_height="110dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/logo1"
        android:layout_marginTop="22dp"/>

    <TextView
        android:id="@+id/tv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/spicy_rice"
        android:text="Foodie"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_createNewUse"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_slogan_create_new_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/akaya_telivigala"
        android:text="Deliver your favourite food"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@id/tv_logo"
        app:layout_constraintStart_toStartOf="@id/tv_logo"
        app:layout_constraintTop_toBottomOf="@+id/tv_logo" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/amethysta"
        android:text="Create New User Admin"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_slogan_create_new_user"
        app:layout_constraintStart_toStartOf="@+id/tv_slogan_create_new_user"
        app:layout_constraintTop_toBottomOf="@+id/tv_slogan_create_new_user" />

    <EditText
        android:id="@+id/edt_createNewUser_name"
        android:layout_width="370dp"
        android:layout_height="57dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/edittextshape"
        android:drawableLeft="@drawable/usernew"
        android:drawablePadding="15dp"
        android:elevation="8dp"
        android:hint="Name of the Owner"
        android:paddingLeft="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView7" />

    <EditText
        android:id="@+id/edt_createNewUser_email"
        android:layout_width="370dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittextshape"
        android:drawableLeft="@drawable/mail"
        android:drawablePadding="15dp"
        android:elevation="18dp"
        android:ems="10"
        android:hint="Email or Phone Number"
        android:textColorHint="@color/black"
        android:inputType="textEmailAddress"
        android:paddingLeft="15dp"
        app:layout_constraintEnd_toEndOf="@+id/edt_createNewUser_name"
        app:layout_constraintStart_toStartOf="@+id/edt_createNewUser_name"
        app:layout_constraintTop_toBottomOf="@+id/edt_createNewUser_name" />

    <EditText
        android:id="@+id/edt_createNewUser_password"
        android:layout_width="370dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittextshape"
        android:drawableLeft="@drawable/lock"
        android:drawablePadding="15dp"
        android:elevation="18dp"
        android:ems="10"
        android:hint="Password"
        android:textColorHint="@color/black"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        app:layout_constraintEnd_toEndOf="@+id/edt_createNewUser_email"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/edt_createNewUser_email"
        app:layout_constraintTop_toBottomOf="@+id/edt_createNewUser_email" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_createNewUser"
        android:layout_width="220dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@id/edt_createNewUser_password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        android:background="@drawable/whitebutton"
        android:backgroundTint="#1C712D"
        android:fontFamily="@font/abhaya_libre"
        android:textColor="@color/white"
        android:text="Create New User"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:elevation="5dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>