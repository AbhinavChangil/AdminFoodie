<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_orderDetails_item"
        android:layout_width="387dp"
        android:layout_height="87dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardElevation="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">


            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_orderDetails_item2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/white"
                android:elevation="8dp">


                <ImageView
                    android:id="@+id/img_orderDetails_item"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    tools:srcCompat="@tools:sample/avatars"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_foodName_orderDetails_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/abhaya_libre"
                android:text="Food Name"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:inputType="textMultiLine"
                app:layout_constraintStart_toEndOf="@+id/card_view_orderDetails_item2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_quantity_orderDetails_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/abhaya_libre"
                android:text="Quantity:"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/card_view_orderDetails_item2"
                app:layout_constraintTop_toBottomOf="@id/tv_foodName_orderDetails_item" />


            <TextView
                android:id="@+id/tv_quantityNumber_orderDetails_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textStyle="bold"
                android:textColor="@color/dark_green_logo"
                android:textSize="19sp"
                android:fontFamily="@font/abhaya_libre"
                app:layout_constraintTop_toTopOf="@+id/tv_quantity_orderDetails_item"
                app:layout_constraintLeft_toRightOf="@id/tv_quantity_orderDetails_item"
                app:layout_constraintBottom_toBottomOf="@id/tv_quantity_orderDetails_item"
                android:layout_marginLeft="3dp"
                />
            <TextView
                android:id="@+id/tv_price_orderDetails_item"
                android:layout_width="77dp"
                android:layout_height="28dp"
                android:layout_marginRight="13dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:fontFamily="@font/abhaya_libre"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Rs. 450"
                android:textColor="@color/dark_green_logo"
                android:textAllCaps="false" />

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>